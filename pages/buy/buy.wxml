<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">收货人</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" value='{{customerData.customer}}' bindinput='changeValue' data-name='customerData.customer'  placeholder="请输入收货人名字" />
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">手机号码</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" value='{{customerData.phone}}' bindinput='changeValue' data-name='customerData.phone'  placeholder="请输入手机号码" />
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">收货地址</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" value='{{customerData.address}}' bindinput='changeValue' data-name='customerData.address'   placeholder="请输入收货地址" />
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">备注</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <textarea  placeholder=""  value='{{customerData.comment}}' bindinput='changeValue'data-name='customerData.comment'   />
      </view>
    </view>
  </view>



  <view style='text-align:center'>
    <button type='primary' size='mini' bindtap='buy'>确认购买</button>
  </view>

</view>